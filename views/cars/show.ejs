<%- include('../partials/header') %>

<section id="show-page">
    <div>Year: </div>
    <div>
      <%= car.year %>
    </div>
    <div>Make: </div>
    <div>
      <%= car.make %>
    </div>
    <div>Model: </div>
    <div>
      <%= car.model %>
    </div>
    <div>Price: </div>
    <div>
      <%= car.price %>
    </div>

    <br><br>
  <h2>Reviews</h2>
    <% if (user) { %>
        <form id="add-review-form" method="POST" action="/cars/<%= car._id %>/reviews">
            <label>Review:</label>
            <textarea name="content"></textarea>
            <label>Rating:</label>
            <select name="rating">
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
            </select>
            <input type="submit" value="Add Review">
          </form>
          <% } else { %>
            Please log in to leave a review
    <% } %>


    <% if (car.reviews.length) { %>
      <table>
        <thead>
          <tr>
            <th>Date</th>
            <th>Review</th>
            <th>Rating</th>
          </tr>
        </thead>
        <tbody>
          <% let total=0 %>
            <% car.reviews.forEach(function(r) { %>
              <% total +=r.rating %>
                <tr>
                  <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer">
                    <%= r.userName %>
                  </td>
                  <td>
                    <%= r.createdAt.toLocaleDateString() %>
                  </td>
                  <td>
                    <%= r.content %>
                  </td>
                  <td>
                    <%= r.rating %>
                  </td>
                  <td>
                    <% if (user && user._id.equals(r.userId)) { %>
                      <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                        <button type="submit">X</button>
                      </form>
                    <% } %>
                  </td>
                </tr>
                <% }); %>
                  <tr>
                    <td colspan="2"></td>
                    <td><strong>
                        <%= (total / car.reviews.length).toFixed(1) %>
                      </strong></td>
                  </tr>
        </tbody>
      </table>
      <% } else { %>
        <h5>No Reviews Yet</h5>
        <% } %>




