<%- include('../partials/header') %>

<section id="show-page">
    <div>Year: </div>
    <div>
      <%= car.year %>
    </div>
    <div>Make: </div>
    <div>
      <%= car.make %>
    </div>
    <div>Model: </div>
    <div>
      <%= car.model %>
    </div>
    <div>Price: </div>
    <div>
      <%= car.price %>
    </div>
    <div>Miles: </div>
    <div>
      <%= car.miles %>
    </div>
    <div>Description: </div>
    <div>
      <%= car.description %>
    </div>

    <br><br>
  <h2>Questions</h2>
    <% if (user) { %>
        <form id="add-review-form" method="POST" action="/cars/<%= car._id %>/questions">
            <label>Ask a Question:</label>
            <textarea name="content"></textarea>
            <input type="submit" value="Ask Question">
          </form>
          <% } else { %>
            Please log in to ask a question
    <% } %>


    <% if (car.questions.length) { %>
      <table>
        <thead>
          <tr>
            <th>User</th>
            <th>Date</th>
            <th> Question</th>
          </tr>
        </thead>
        <tbody>
          <% let total=0 %>
            <% car.questions.forEach(function(r) { %>
              <% total +=r.rating %>
                <tr>
                  <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer">
                    <%= r.userName %>
                  </td>
                  <td>
                    <%= r.createdAt.toLocaleDateString() %>
                  </td>
                  <td>
                    <%= r.content %>
                  </td>
                  <td>
                    <%= r.rating %> 
                  </td>
                  <td>
                    <% if (user && user._id.equals(r.userId)) { %>
                        <form action="/questions/<%= r._id %>?_method=DELETE" method="POST">
                        <button type="submit">Delete</button>
                      </form>
                    <% } %>
                  </td>
                </tr>
                <% }); %>

        </tbody>
      </table>
      <% } else { %>
        <h5>No Questions Yet</h5>
        <% } %>




